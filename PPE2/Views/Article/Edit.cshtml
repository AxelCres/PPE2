@using Blaguotech.Areas.Models
@model ArticleModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edition de l'article @Model.Titre</h1>
<div class="card">
    <div class="card-header">@Model.Titre</div>
    <div class="card-body">
        <div class ="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div class="form-group">
                        <label asp-for="Titre"></label>
                        <input asp-for="Titre" class="form-control" />
                        <span asp-validation-for="Titre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Note"></label>
                        <input asp-for="Note" class="form-control" />
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>
                    <div class="form-groupe">
                        <input type="submit" value="Editer" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}